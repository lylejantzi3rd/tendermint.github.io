#article-prev-next
  display flex
  flex-flow column no-wrap
  margin 1.25*x -0.25*x -0.25*x
  justify-content space-between

  .article-prev-next
    flex 1
    display flex
    a, .end
      border 1px solid bc
      margin 0.25*x
      padding 0.75*x x

      flex 1
      display flex
      flex-flow column no-wrap

      .label
        color dim
        text-transform uppercase
        font-size 0.75*x
        letter-spacing 1px
        margin 0 0 0.25*x

      .title
        font-weight 600
        font-size 1.25*x
        line-height 1.25

        flex 1

    a:hover
      background lighten(mcolor,97%)
      border 1px solid lighten(mcolor,66%)

    .end
      background faint
      .label
        color light
      .title
        color light

@media screen and (min-width: 720px)
  #article-prev-next
    flex-flow row 
    margin 0 -0.5*x -0.5*x

    .article-prev-next
      a, .end
        margin 0.5*x
        padding 1.25*x 1.5*x
        max-width 24*x

      &.article-prev a
      &.article-prev .end
        border-radius 0 4*x 4*x 0
        padding-right 2*x

      &.article-next
        justify-content flex-end

      &.article-next a
      &.article-next .end
        text-align right
        border-radius 4*x 0 0 4*x
        padding-left 2*x

@media screen and (min-width: 960px)
  #article-prev-next
    margin-top 1.5*x

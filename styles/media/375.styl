/*----------------------------------------------------------------------
 Site Header & Footer
----------------------------------------------------------------------*/

logo-size = 38px

.site-logo
  margin-left -0.75 * logo-size
  width logo-size * 1.5
  height logo-size * 1.5 + 4px

.site-bookend
  font-size x
  height x*3 + 3px
  line-height 3em

// reduce the fonts size of the footer because the text length is still too long
#site-footer
  font-size x*0.75
  line-height x*3

#site-header
  ul
    width 120px * 1.2

/*----------------------------------------------------------------------
Sections
----------------------------------------------------------------------*/

section
  .container
    padding 0 12px

.article-prev-next
  margin 0 0 12px

/*----------------------------------------------------------------------
Body - Home
----------------------------------------------------------------------*/

#body-home
  section#section-hero-home
    h1
      font-size 3em

    #tagline
      font-size 1em

    #tagline, #intro
      line-height 1.5em
      margin 0 0 1.5em

    .social-media
      margin-top x*2
      a
        font-size 1.25em

/*----------------------------------------------------------------------
Body - About
----------------------------------------------------------------------*/

#body-about
  .ul-portraits
    margin -12px 0 0
    padding 6px
    li
      padding 6px
      img
        padding x*0.25
        border-color bc

/*----------------------------------------------------------------------
Body - Blog
----------------------------------------------------------------------*/

.body-article
  #section-hero
    margin-top 51px   

    ul.categories li a
      font-size 0.75em * 1.17

a.footer-large-button
  line-height 3em

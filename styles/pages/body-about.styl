#body-about
  section.section-portraits
    h2
      text-align center
      margin-bottom 10px

    .container
      padding 0

  .ul-portraits
    clearfix()
    margin -10px 0 0
    padding 5px
    display flex
    flex-flow row wrap
    justify-content center
    li
      flex 1 0 50%
      padding 5px
      margin-bottom x*0.75

    img
      width 100%
      border 1px solid darken(bc,50%)

    .label
      text-align center

    span.name, span.title
      display block

    span.name
      font-weight 500

    span.title
      line-height 1.25em
      font-size 0.9em
      color dim

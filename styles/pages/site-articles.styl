.body-article
  #section-hero, #section-post
    background none
    .container
      max-width 60em
      &#article-prev-next
        max-width 1280px

  #section-hero
    margin-top 39px
    padding 2*x 0 1.5*x
    border-bottom 1px solid bc

    h1
      font-size 2em
      color txt
      text-shadow none
      line-height 1
      color mcolor
      margin 0 0 x*0.5
      font-weight normal

    p
      font-size 1em
      margin 0 0 0.5em
      color dim

    ul.categories
      li
        margin-bottom 0

    .left, .right
      margin-bottom 1em

    .left
      float left
      margin-right 1em
    .right
      float right
      margin-left 1em

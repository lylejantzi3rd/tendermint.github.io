section
  border-bottom 1px solid bc
  padding 1.5em 0 0

  .container
    padding 0 10px
    clearfix()

  .section-header
    margin 0 0 1.5em

  h2
    line-height 1.25em
    margin 0 0 x
    text-align center
    i
      padding-right 0.25em

  .content
    ul
      list-style square
      padding-left 1.5em

.section-inverse
  background mcolor
  background linear-gradient(top, lighten(mcolor,5%), darken(mcolor,5%))

  h2
    color lighten(mcolor,90%)
  p, ul, ol
    color lighten(mcolor,60%)
    a
      color lighten(mcolor,80%)
      font-weight bold
  
.section-borderless
  .container
    padding 0

.section-split
  padding 0
  .column
    border-bottom 1px solid bc
    padding 0 10px
    
    &:last-of-type
      border-bottom none

    h2
      padding 1.5*x 0 0
      .long
        display none

    p
      text-align center
  &.section-inverse 
    .column
      border-color lighten(mcolor,10%)

.section-dark
  background mcolor
  text-align center

  .container
    display flex
    flex-flow column
    align-items center


  h1
    line-height 1em
    margin x*3 0 0
    color lighten(mcolor,90%)

  h2
    color lighten(mcolor,90%)
    font-weight 500
    line-height 1.25em

  p
    max-width 30*x
    width 100%

    color lighten(mcolor,50%)
    font-size 1.25em
    font-weight 200

  #mc-embedded-subscribe-form
    max-width 20*x
    width 100%

    background hsla(0,0,0,.25)
    padding 0.5em 0.5em 0
    .input-group
      margin 0 0 0.5em
      input, button
        vertical-align top
        width 100%

#section-hero
  background mcolor url('../images/home/gradient.jpg') no-repeat center center
  background-size cover
  padding 3*x + 48px 0 1.5*x

  h1
    margin 0 0 x
  p
    max-width x*40
    margin 0 0 x*1.5
    a
      color lighten(link,50%)
      background hsla(0,0,0,0.25)
      padding 0 x*0.25
      &:hover
        color lighten(link,75%)
        text-decoration underline

#section-social-media
  border-top 4px solid lighten(mcolor,20%)
  border-bottom none
  ul
    display flex
    flex-flow column nowrap
    margin -0.5em 0 1em
    li
      text-align left
      display flex
      flex 1
      margin 0
      a
        margin 0.25em
        display block
        border 1px solid lighten(mcolor,10%)
        padding 0.55em 0.75em
        background lighten(mcolor,3%)
        flex 1
        h3
          color lighten(mcolor,75%)
          font-size x
          line-height 1.5em
          font-weight 500
          i.fa
            padding-right 0.2em
        p
          font-size x
          line-height 1.5em
          margin 0
        &:hover
          text-decoration none
          border-color lighten(mcolor,20%)
          h3
            color lighten(mcolor,85%)
          background lighten(mcolor,5%)

#section-cta
  text-align center
  border-top 1px solid lighten(mcolor,10%)
  padding 2.5em 0 3em
  margin-bottom -1px
